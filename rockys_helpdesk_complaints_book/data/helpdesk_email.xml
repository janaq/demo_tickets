<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Diseño de correo electrónico: encapsulación al enviar (no se usa en la visualización del backend) -->
        <template id="digest_mail_layout">
            &lt;!DOCTYPE html&gt;
            <html xmlns="http://www.w3.org/1999/xhtml">
                <head>
                    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
                    <meta name="format-detection" content="telephone=no"/>
                    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=no;"/>
                    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=EDGE" />
                    <style type="text/css">
                        body { 
                            font-family: Arial, sans-serif; 
                            background-color: #F9F3EF; 
                            margin: 0; 
                            padding: 0; 
                            color: #333; 
                        } 
                        h1, h2 { 
                            text-align: center; 
                            margin: 10px 0; 
                        } 
                        h1 { 
                            color: <t t-out="color"/> !important;
                        } 
                        h2 { 
                            font-size: 16px; 
                            font-weight: bold; 
                        } 
                        .container { 
                            background-color: #fff; 
                            border-radius: 10px; 
                            max-width: 800px; 
                            margin: 20px auto; 
                            padding: 20px; 
                            /*box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);*/ 
                        } 
                        .section-title { 
                            font-weight: bold; 
                            margin-bottom: 10px; 
                        } 
                        .info-box { 
                            display: flex; 
                            flex-wrap: wrap; 
                            gap: 2% !important;
                            width: 100% !important; 
                        } 
                        .input-group { 
                            display: flex !important; 
                            width: 100% !important;
                            margin-bottom: 15px !important; 
                        }

                        .input-group-alone { 
                            display: flex; 
                            width: 100% !important;
                            margin-bottom: 15px !important; 
                        }
                         
                        label { 
                            font-weight: bold; 
                            font-size: 14px; 
                        } 
                        input, textarea { 
                            padding: 8px; 
                            border: 1px solid #8B0000; 
                            border-radius: 5px; 
                            font-size: 14px; 
                            background-color: #fff; 
                        } textarea { 
                            resize: none; 
                        } 
                        /* Top Header */
                        .header { 
                            text-align: center; 
                            margin-bottom: 20px; 
                        } 
                        .header p { 
                            font-size: 14px; 
                            margin: 5px 0; 
                        } 
                        .logo { 
                            text-align: center; 
                        }
                        .disabled-radio{
                            pointer-events: none !important;
                            opacity: 0.6;
                        }
                        .container-radio{
                            display: flex; /* Usamos flexbox para dividir el div */
                            justify-content: space-between; /* Separa los elementos */
                            align-items: center; /* Centra verticalmente */
                            width: 100%; /* Ocupa todo el ancho */
                            padding: 10px; 
                            border: 0px solid #ccc;
                        }

                        .left, .right { 
                            display: flex; 
                            align-items: center; /* Centra verticalmente los elementos dentro de .left y .right */ 
                        } 
                        .left span, .right span { 
                            line-height: 1.5; /* Ajusta la altura del texto */ 
                        } 
                        .left span { 
                            align-self: center; /* Alinea verticalmente el span dentro de .left */ 
                        } 
                        .icon { 
                            font-size: 24px; 
                            margin-right: 10px; /* Espacio entre el ícono y el texto */ 
                        }
                        .round-div{
                            border: 2px solid <t t-out="color"/> !important; /* Contorno grueso de color gris */
                            border-radius: 5px !important;
                        }
                        .large-span{
                            font-size: 13px; /* Tamaño más grande */
                            margin: 0px 15px 10px 25px; /* Margen izquierdo y derecho */
                        }
                        .small-span{
                            font-size: 10px; /* Tamaño más grande */
                            margin: 10px 15px 0px 25px; /* Margen izquierdo y derecho */
                        }
                        .large-radio {
                            font-size: 15px; /* Tamaño más grande */
                        }
                    </style>
                </head>
                <body>
                    <t t-out="body"/>
                </body>
            </html>
        </template>
        <!-- Plantilla principal del resumen -->
        <template id="digest_mail_main">
            <!--<div class="logo">
                <img t-if="store.get('logo',False)" width="300" height="200" t-att-src="store.get('logo')" alt="Logo" />
            </div>-->
            <div class="header">
                <h1>Libro de reclamaciones</h1>
                <h2><span t-esc="ticket_reference"/></h2>
                <p> Conforme a lo establecido en el código de la Protección y Defensa del consumidor, este establecimiento cuenta con un Libro de Reclamaciones a tu disposición. Registra tu queja o reclamo aquí. </p>
                <br/>
                <br/>
                <!-- Información de la empresa -->
                <div class="company-info">
                    <p><strong>Fecha:</strong> <strong><span t-esc="registration_date"/></strong></p>
                    <p><strong>Razón Social:</strong> <strong><span t-esc="store.get('company_name','')"/></strong></p>
                    <p><strong>RUC:</strong> <strong><span t-esc="store.get('ruc','')"/></strong></p>
                    <p><strong>Dirección fiscal:</strong> <strong><span t-esc="store.get('address','')"/></strong></p>
                </div>
            </div>
            <div class="container">
                <!-- Título de sección -->
                <h3 class="section-title">1. Identificación del consumidor reclamante</h3>
                <!-- Formulario -->
                <div class="info-box">
                    <div class="input-group-alone round-div">
                        <span class="small-span">Nombre completo</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_name','')" />
                    </div>
                </div>
                <div class="info-box">
                    <div class="input-group round-div">
                        <span class="small-span">DNI/C.E</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_identification_document','')" />
                    </div>
                    <div class="input-group round-div">
                        <span class="small-span">Departamento</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_department_id','')" />
                    </div>
                </div>
                <div class="info-box">
                    <div class="input-group round-div">
                        <span class="small-span">Dirección</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_address','')" />
                    </div>
                    <div class="input-group round-div">
                        <span class="small-span">Correo electrónico</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_email','')" />
                    </div>
                </div>
                <div class="info-box">
                   <div class="input-group round-div">
                        <span class="small-span">Celular</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_cell_phone','')" />
                    </div>
                    <div class="input-group round-div">
                        <span class="small-span">Teléfono</span>
                        <span class="large-span" t-esc="consumer_complainant.get('claimant_phone','')" />
                    </div>
                </div>
                <t t-if="consumer_complainant.get('is_minor',True)">
                    <strong><span class="small-span" style="margin:0px 0px 5px 0px !import
                    ant; font-size: 12px !important; ">En caso de que el reclamante sea menor de edad</span></strong><br/>
                    <div class="info-box">
                        <div class="input-group-alone round-div">
                            <span class="small-span">Nombre del padre/madre</span>
                            <span class="large-span" t-esc="consumer_complainant.get('parent_ct_name','')" />
                        </div>
                    </div>
                    <div class="info-box">
                        <div class="input-group round-div">
                            <span class="small-span">DNI/C.E del padre/madre</span>
                            <span class="large-span" t-esc="consumer_complainant.get('parent_ct_identification_document','')" />
                        </div>
                        <div class="input-group round-div">
                            <span class="small-span">Dirección del padre/madre</span>
                            <span class="large-span" t-esc="consumer_complainant.get('parent_ct_address','')" />
                        </div>
                    </div>
                    <div class="info-box">
                        <div class="input-group round-div">
                            <span class="small-span">Correo electrónico del padre/madre</span>
                            <span class="large-span" t-esc="consumer_complainant.get('parent_ct_email','')" />
                        </div>
                        <div class="input-group round-div">
                            <span class="small-span">Teléfono del padre/madre</span>
                            <span class="large-span" t-esc="consumer_complainant.get('parent_ct_phone','')" />
                        </div>
                    </div>
                </t>
            </div>
        </template>
    </data>
</odoo>