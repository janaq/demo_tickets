<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- helpdesk.motivo_llamada form view -->
    <record id="helpdesk_motivo_llamada_view_form" model="ir.ui.view">
        <field name="name">Motivo Llamada - Formulario</field>
        <field name="model">helpdesk.motivo_llamada</field>
        <field name="arch" type="xml">
            <form string="">
                <header />
                <sheet string="JOR">
                    <widget name="web_ribbon" text="Archivado" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" placeholder="Name..." />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="interaccion_id"/>
                        </group>
                        <group/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Escriba sus notas aquÃ­ ..."
                            nolabel="1" />
                    </group>
                </sheet>
                <div class="oe_chatter" name="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                    <field name="activity_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- helpdesk.motivo_llamada tree view -->
    <record id="helpdesk_motivo_llamada_view_tree" model="ir.ui.view">
        <field name="name">Motivo Llamada - Lista</field>
        <field name="model">helpdesk.motivo_llamada</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="interaccion_id"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <!-- model.name action window -->
    <record id="helpdesk_motivo_llamada_name_action" model="ir.actions.act_window">
        <field name="name">Motivo Llamada - Accion</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.motivo_llamada</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">current</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="helpdesk_motivo_llamada_menu_act" name="Motivos de llamada" parent="helpdesk.helpdesk_menu_config" action="helpdesk_motivo_llamada_name_action" sequence="5"/>

</odoo>